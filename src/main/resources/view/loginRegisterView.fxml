<?import javafx.scene.layout.*?>
<?import controller.LoginController?>
<?import controller.RegisterController?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<fx:root type="AnchorPane"
         xmlns="http://javafx.com/javafx/11.0.2"
         xmlns:fx="http://javafx.com/fxml/1"
         prefHeight="620.0" prefWidth="900.0">

    <VBox AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          style="-fx-background-color: whitesmoke">

        <Label text="MasterMind">
            <font>
                <Font size="44.0" />
            </font>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </Label>
        <HBox alignment="CENTER">

            <LoginController
                    prefHeight="240.0" maxHeight="240.0" prefWidth="260.0"/>

            <RegisterController
                    prefHeight="240.0" maxHeight="240.0"
                    prefWidth="260.0"/>
        </HBox>
    </VBox>
</fx:root>
