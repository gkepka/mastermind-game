<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root alignment="TOP_CENTER" type="TilePane" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">

    <VBox alignment="CENTER_RIGHT" spacing="5.0">
      <Label text="Rejestracja">
         <font>
            <Font size="28.0" />
         </font>
      </Label>
        <HBox alignment="CENTER_RIGHT" spacing="5.0">
            <Label text="Login:" />
            <TextField fx:id="login" />
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="5.0">
            <Label text="E-mail:" />
            <TextField fx:id="email" />
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="5.0">
            <Label text="Hasło:" />
            <PasswordField fx:id="password" />
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="5.0">
            <Label text="Potwierdź hasło:" />
            <PasswordField fx:id="confirmPassword" />
        </HBox>
        <Button fx:id="registerButton" mnemonicParsing="false" prefWidth="120.0" text="Zarejestruj" />

        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>
</fx:root>
